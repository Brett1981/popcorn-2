                            VerticalAlignment="Center"
                            Content="+"
                            Foreground="{StaticResource ForegroundBrush}" />
                        <Border
                            Width="26"
                            Height="26"
                            VerticalAlignment="Center"
                            Background="{StaticResource ControlsBackgroundMediumBrush}">
                            <Label
                                Margin="4,3,3,3"
                                Padding="0"
                                VerticalAlignment="Bottom"
                                Content="{TemplateBinding Content2}"
                                Foreground="{StaticResource ForegroundBrush}"
                                Style="{StaticResource SegoeAssets}" />
                        </Border>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="LongKey" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="11" />
